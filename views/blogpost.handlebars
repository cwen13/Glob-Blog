
<body>
<section class="title" >
    <h1><i class="bi bi-journal-text"></i> {{title}} </h1>
    <section class="next">
      <h2><i class="bi bi-person-circle"></i> {{user.name}} <a href="mailto:{{user.email}}">{{user.email}}</a><h2>
	  <section class="content">
	    {{#if edit }}
	    <textarea
	      id="blogPost"
	      data-author-id="{{user.id}}"
	      data-current-user="{{user_id}}"
	      data-blogpost-id="{{id}}"
	      >
	      {{else}}
	      <p>
		{{/if}}
		{{body}}
	    {{#if edit }}
	      </textarea>
	    {{else}}
	      </p>
	      {{/if}}
</section>
{{#if edit}}
<button id="edit-submit" name="edit"><i class="bi bi-pen"></i> Edit</button>
{{/if}}

    </section>
  </section>
  <section class="comment-box d-flex flex-column">
    <label for="comment-box">Comment on this post here:</label>
    <textarea id="comment-box" name="comment" rows="5">
      Comment here....
    </textarea>
    <button id="comment-submit" style="width: 50%;" type="button"> Comment</button>
  </section>
  {{#if comments}}
  {{#each comments as |comment|}}
  <section class="card" style="width: 100%;">
    <section class="card-body">
      <h3 class="card-title">USER: {{comment.user.name}} ({{comment.user.date_created}})</h3>
      <p class="card-subtitle text-muted card-text">{{comment.comment}}</p>
    </section>
  </section>  
  {{/each}}
  {{/if}}
</body>
<script src="/js/blogPost.js"></script>

