<!--set up a list for teh blog posts -->

{{#each posts as |post|}}
  <seciton class="card" style="width: 100%;">
    <seciton class="card-body">
      <h3 class="card-title">{{title}}</h3>
      <h5 class="card-subtitle text-muted">
      {{author}} on {{format_date date_created}}
      </h5>
      <p class="card-text">{{post_review post}}</p>
    </section>
  </section>
{{/each}}